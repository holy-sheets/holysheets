{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*", "tsup.config.ts"]
    }
  },
  "include": ["src/**/*", "src/.examples/**/*", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.spec.js"]
}
